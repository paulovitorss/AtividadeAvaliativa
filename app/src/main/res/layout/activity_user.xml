<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.user.UserActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtNomeAluno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Olá, Paulo Vitor - 9º Ano" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeAluno">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="8dp">

            <!-- Card Boletim -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBoletim"
                style="@style/ClickableCard">

                <TextView
                    style="@style/CardTextView"
                    android:contentDescription="@string/label_boletim"
                    android:text="@string/label_boletim"
                    app:drawableTopCompat="@drawable/ic_clipboardtext" />
            </androidx.cardview.widget.CardView>

            <!-- Card Frequência -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFrequencia"
                style="@style/ClickableCard">

                <TextView
                    style="@style/CardTextView"
                    android:contentDescription="@string/label_btn_frequencia"
                    android:text="@string/label_btn_frequencia"
                    app:drawableTopCompat="@drawable/ic_calendar" />
            </androidx.cardview.widget.CardView>

            <!-- Card Desempenho -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDesempenho"
                style="@style/ClickableCard">

                <TextView
                    style="@style/CardTextView"
                    android:contentDescription="@string/label_desempenho"
                    android:text="@string/label_desempenho"
                    app:drawableTopCompat="@drawable/ic_chartlineup" />
            </androidx.cardview.widget.CardView>

            <!-- Card Comunicados -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardComunicados"
                style="@style/ClickableCard">

                <TextView
                    style="@style/CardTextView"
                    android:contentDescription="@string/label_comunicados"
                    android:text="@string/label_comunicados"
                    app:drawableTopCompat="@drawable/ic_megaphone" />
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>